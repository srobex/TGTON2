# -----------------------------------------------
# HyperSniper environment example (.env)
# -----------------------------------------------
# Nested models use SECTION__FIELD names (see config/settings.py).
# Lists must be JSON arrays, for example [123456789,987654321].

ENVIRONMENT=dev

# Telegram bot + Mini App
TELEGRAM__TOKEN=000000000:REPLACE_ME
TELEGRAM__APP_NAME=HyperSniper
TELEGRAM__MINI_APP_URL=https://miniapp.example.com
TELEGRAM__WEBHOOK_DOMAIN=
TELEGRAM__ADMINS=[123456789]

# TON RPC / WS
TON__RPC_ENDPOINT=https://toncenter.com/api/v2/jsonRPC
TON__WS_ENDPOINT=wss://toncenter.com/api/v2/ws
TON__NETWORK=mainnet

# TON safety thresholds (optional)
TON_SECURITY__SIMULATE_WORKCHAIN=0
TON_SECURITY__MAX_SAFETY_LATENCY_MS=600
TON_SECURITY__MIN_LIQUIDITY_USD=5000
TON_SECURITY__MIN_VOLUME_5M_USD=20000
TON_SECURITY__HONEYPOT_BAN_SCORE=0.9
TON_SECURITY__BLACKLIST_ADDRESSES=[]
TON_SECURITY__TRUSTED_SMART_MONEY=[]

# Cache
CACHE__BACKEND=memory
CACHE__TTL_SECONDS=30
CACHE__REDIS_DSN=redis://localhost:6379/0

# Database
DATABASE__DSN=sqlite+aiosqlite:///./database/hypersniper.db
DATABASE__ECHO=false

# Gem Scanner / Hunter
GEM_SCANNER__REFRESH_INTERVAL_SEC=15
GEM_SCANNER__BURST_THRESHOLD_TOKENS=10
GEM_SCANNER__MIN_LIQUIDITY_USD=5000
GEM_SCANNER__MIN_VOLUME_5M_USD=20000
GEM_SCANNER__HOT_GROWTH_PERCENT=35

# Price Feed
PRICE_FEED__INTERVAL_SEC=10
PRICE_FEED__SOURCE_URL=https://tonapi.io/v2/rates?tokens=
PRICE_FEED__REQUEST_TIMEOUT=5

# Referral / Omniston
REFERRAL__DEFAULT_FEE_PERCENT=0.9
REFERRAL__OMNISTON_PAYLOAD=0xPAYLOAD
REFERRAL__REWARD_DELAY_SEC=300

# Localization
LOCALIZATION__DEFAULT_LOCALE=ru
LOCALIZATION__ENABLED_LOCALES=["ru","en"]

# Security / JWT
SECURITY__JWT_SECRET=CHANGE_ME_SUPER_SECRET
SECURITY__JWT_ALGORITHM=HS256
SECURITY__JWT_TTL_MINUTES=60
